[
    {
        "name": "dagit",
        "image": "${dagit-image}",
        "essential": true,
        "portMappings": [
            {
                "protocol": "tcp",
                "containerPort": 3000
            }
        ],
        "logConfiguration": {
            "logDriver": "awslogs",
            "options": {
                "awslogs-group": "${cloudwatch-log-group}",
                "awslogs-region": "eu-west-1",
                "awslogs-stream-prefix": "logs"
            }
        },
        "environment": [
            {
                "name": "DAGSTER_POSTGRES_HOSTNAME",
                "value": "${rds-hostname}"
            },
            {
                "name": "DAGSTER_POSTGRES_USER",
                "value": "test_user"
            },
            {
                "name": "DAGSTER_POSTGRES_PASSWORD",
                "value": "${rds-password}"
            },
            {
                "name": "DAGSTER_POSTGRES_DB",
                "value": "dagsterdb"
            },
            {
                "name": "HOSTNAME_etl",
                "value": "localhost"
            },
            {
                "name": "DAGSTER_NETWORK",
                "value": "$(tail -1 /etc/hosts | awk '{ print $1 }')"
            }
        ],
        "entryPoint": [
            "dagit",
            "-h",
            "0.0.0.0",
            "-p",
            "3000",
            "-w",
            "workspace.yaml"
        ],
        "mountPoints": [
            {
                "sourceVolume": "docker_sock",
                "containerPath": "//var/run/docker.sock",
                "readOnly": true
            }
        ]
    },
    {
        "name": "daemon",
        "image": "${daemon-image}",
        "essential": true,
        "logConfiguration": {
            "logDriver": "awslogs",
            "options": {
                "awslogs-group": "${cloudwatch-log-group}",
                "awslogs-region": "eu-west-1",
                "awslogs-stream-prefix": "logs"
            }
        },
        "environment": [
            {
                "name": "DAGSTER_POSTGRES_HOSTNAME",
                "value": "${rds-hostname}"
            },
            {
                "name": "DAGSTER_POSTGRES_USER",
                "value": "test_user"
            },
            {
                "name": "DAGSTER_POSTGRES_PASSWORD",
                "value": "${rds-password}"
            },
            {
                "name": "DAGSTER_POSTGRES_DB",
                "value": "dagsterdb"
            },
            {
                "name": "HOSTNAME_etl",
                "value": "localhost"
            },
            {
                "name": "DAGSTER_NETWORK",
                "value": "$(tail -1 /etc/hosts | awk '{ print $1 }')"
            }
        ],
        "entryPoint": [
            "dagster-daemon",
            "run"
        ],
        "mountPoints": [
            {
                "sourceVolume": "docker_sock",
                "containerPath": "//var/run/docker.sock",
                "readOnly": true
            }
        ]
    },
    {
        "name": "etl",
        "image": "${etl-image}",
        "hostname": "etl",
        "essential": false,
        "portMappings": [
            {
                "protocol": "tcp",
                "containerPort": 4000
            }
        ],
        "logConfiguration": {
            "logDriver": "awslogs",
            "options": {
                "awslogs-group": "${cloudwatch-log-group}",
                "awslogs-region": "eu-west-1",
                "awslogs-stream-prefix": "logs"
            }
        },
        "environment": [
            {
                "name": "DAGSTER_POSTGRES_HOSTNAME",
                "value": "${rds-hostname}"
            },
            {
                "name": "DAGSTER_POSTGRES_USER",
                "value": "test_user"
            },
            {
                "name": "DAGSTER_POSTGRES_PASSWORD",
                "value": "${rds-password}"
            },
            {
                "name": "DAGSTER_POSTGRES_DB",
                "value": "dagsterdb"
            },
            {
                "name": "DAGSTER_CURRENT_IMAGE",
                "value": "$(echo ${ECS_CONTAINER_METADATA_URI_V4} | python3 -c 'import json,sys;obj=json.load(sys.stdin);print(obj['Image'])')"
            },
            {
                "name": "DAGSTER_NETWORK",
                "value": "$(tail -1 /etc/hosts | awk '{ print $1 }')"
            }
        ],
        "mountPoints": [
            {
                "sourceVolume": "docker_sock",
                "containerPath": "//var/run/docker.sock",
                "readOnly": true
            }
        ]
    }
]